<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dishItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        app:cardElevation="6dp"
        android:layout_margin="8dp"
        app:cardBackgroundColor="@color/cardview_light_background"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:background="@drawable/shape"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/dishItemImage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="#f6f6"
                android:transitionName="dishItemImage"
                android:layout_gravity="center_vertical"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/dishItemDishName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dish Name"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold"
                    android:transitionName="dishItemDishName"
                    android:textSize="18sp"/>
                <TextView
                    android:id="@+id/dishItemRestaurantName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Restaurant Name"
                    android:layout_marginTop="4dp"
                    android:transitionName="dishItemRestaurantName"
                    android:textColor="#000"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/dishItemGramature"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="Gramature"
                        android:layout_marginTop="6dp"
                        android:textSize="20dp"
                        android:transitionName="dishItemGramature"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/dishItemPrice"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="Cena"
                        android:layout_marginTop="6dp"
                        android:textSize="20dp"
                        android:transitionName="dishItemPrice"
                        android:layout_weight="1"/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>



    </android.support.v7.widget.CardView>
</android.widget.RelativeLayout>